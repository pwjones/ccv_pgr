<!--
Stores global settings for CCV Application
//
CCV XML Files:
 - app_settings.xml
 - camera_settings.xml
 - gui_seetings.xml
 - multiplexer_settings.xml
 - template.xml
 //
CCV 1.5 UPDATES:
CAMERATYPES
Can now use VIDEO or CAMERA MULTIPLEXER MODES.
-->
<?xml version="1.0" ?>
<CONFIG>
    <MULTIPLEXER>
        <WIDTH>1280</WIDTH>
        <HEIGHT>1024</HEIGHT>
        <FRAMERATE>90</FRAMERATE>
        <!-- 
		Setup CAMERATYPES that will be used. 
		If you do not want to use a specific camera type - use 0, otherwise 1.
		 -->
        <CAMERATYPES>
            <PS3>0</PS3>
            <FFMV>0</FFMV>
            <KINECT>0</KINECT>
            <CMU>0</CMU>
            <DIRECTSHOW>0</DIRECTSHOW>
            <FLEA>1</FLEA>
        </CAMERATYPES>
    </MULTIPLEXER>
    <VIDEO>
        <FILENAME>videos/mouse_test.avi</FILENAME>
        <SAVEDFILENAME>C:\Users\pwjones\Videos\mouse_training\2632</SAVEDFILENAME>
        <LOGFILENAME>C:\Users\pwjones\Videos\mouse_training\2632_trackingLog</LOGFILENAME>
        <!--Save every x frames, in order to track at faster speeds but still save video -->
        <SUBSAMPLE>2</SUBSAMPLE>
    </VIDEO>
    <!-- Choose MULTIPLEXER if want to use camera or VIDEO -->
    <SOURCE>MULTIPLEXER</SOURCE>
    <NETWORK>
        <LOCALHOST>127.0.0.1</LOCALHOST>
        <SERIAL>COM3</SERIAL>
        <PARALLEL>LPT1</PARALLEL>
        <TUIO>0</TUIO>
        <TUIOPORT_OUT>3333</TUIOPORT_OUT>
        <TUIOFLASHPORT_OUT>3000</TUIOFLASHPORT_OUT>
        <!-- set to 1 if want to receive TUIO 1.1 messages, 0 - for TUIO 1.0 -->
        <VERSION>0</VERSION>
        <OBJECTSASFIDUCIALS>0</OBJECTSASFIDUCIALS>
    </NETWORK>
    <BLOBS>
        <MAXNUMBER>128</MAXNUMBER>
    </BLOBS>
    <APPLICATION>
        <TITLE>Community Core Vision</TITLE>
        <VERSION>1.5</VERSION>
    </APPLICATION>
    <WINDOW>
        <WIDTH>927</WIDTH>
        <HEIGHT>720</HEIGHT>
    </WINDOW>
    <BOOLEAN>
        <PRESSURE>1</PRESSURE>
        <LABELS>1</LABELS>
        <OUTLINES>1</OUTLINES>
        <LEARNBG>0</LEARNBG>
        <TUIO>0</TUIO>
        <WINTOUCH>0</WINTOUCH>
